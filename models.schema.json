{
  "title": "",
  "description": "",
  "type": "object",
  "properties": {
    "models": {
      "type": "object",
      "patternProperties": {
        "^([A-Z][a-zA-Z0-9]+)$": {
          "type": "object",
          "required": [
            "tableName",
            "fields"
          ],
          "properties": {
            "tableName": {
              "type": "string"
            },
            "fields": {
              "type": "object",
              "patternProperties": {
                "^([a-z_]+)$": {
                  "type": "object",
                  "required": [
                    "dataType",
                    "required"
                  ],
                  "properties": {
                    "dataType": {
                      "type": "string",
                      "enum": [
                        "string",
                        "text",
                        "integer",
                        "float",
                        "boolean",
                        "date",
                        "datetime",
                        "time",
                        "json",
                        "jsonb"
                      ]
                    },
                    "required": {
                      "type": "boolean"
                    },
                    "primaryKey": {
                      "type": "boolean"
                    },
                    "minLength": {
                      "type": "integer"
                    },
                    "maxLength": {
                      "type": "integer"
                    },
                    "defaultValue": {
                      "type": [ "number", "string", "boolean", "null" ]
                    },
                    "unique": {
                      "type": "boolean"
                    },
                    "references": {
                      "type": "object",
                      "properties": {
                        "model": {
                          "type": "string"
                        },
                        "key": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "model",
                        "key"
                      ]
                    }
                  }
                }
              }
            },
            "indexes": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "fields": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "unique": {
                    "type": "boolean"
                  }
                }
              }
            }
          }
        }
      }
    },
    "relationships": {
      "type": "object",
      "patternProperties": {
        "^([A-Z][a-zA-Z0-9]+)$": {
          "type": "object",
          "properties": {
            "hasOne": {
              "type": "object",
              "patternProperties": {
                "^([A-Z][a-zA-Z0-9]+)$": {
                  "type": "object",
                  "properties": {
                    "alias": { "type": "string", "$comment": "Alias for the HasOne relationship" },
                    "foreignKey": { "type": "string" },
                    "sourceKey": { "type": "string" }
                  }
                }
              }
            },
            "hasMany": {
              "type": "object",
              "patternProperties": {
                "^([A-Z][a-zA-Z0-9]+)$": {
                  "type": "object",
                  "properties": {
                    "alias": { "type": "string" },
                    "foreignKey": { "type": "string" },
                    "sourceKey": { "type": "string" }
                  }
                }
              }
            },
            "belongsToOne": {
              "type": "object",
              "patternProperties": {
                "^([A-Z][a-zA-Z0-9]+)$": {
                  "type": "object",
                  "properties": {
                    "alias": { "type": "string" },
                    "foreignKey": { "type": "string" },
                    "targetKey": { "type": "string" }
                  }
                }
              }
            },
            "belongsToMany": {
              "type": "object",
              "patternProperties": {
                "^([A-Z][a-zA-Z0-9]+)$": {
                  "type": "object",
                  "properties": {
                    "alias": { "type": "string" },
                    "foreignKey": { "type": "string" },
                    "targetKey": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}